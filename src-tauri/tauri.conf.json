{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GlobalProtect",
  "version": "1.2.0",
  "identifier": "com.globalprotect.clone",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "GlobalProtect",
        "width": 288,
        "height": 448,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "linux": {
      "deb": {
        "depends": [
          "openconnect",
          "vpnc-scripts",
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libnm0"
        ],
        "files": {
          "/etc/sudoers.d/globalprotect": "./globalprotect-sudoers"
        }
      },
      "rpm": {
        "depends": [
          "openconnect",
          "vpnc-scripts",
          "webkit2gtk4.1",
          "gtk3",
          "NetworkManager-libnm"
        ],
        "files": {
          "/etc/sudoers.d/globalprotect": "./globalprotect-sudoers"
        }
      }
    }
  }
}